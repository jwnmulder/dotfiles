{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>jwnmulder/renovate-config"
  ],

  "packageRules": [
    {
      "matchPaths": [".pre-commit-config.yaml"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "addLabels": ["automerge"]
    },
    {
      "matchDatasources": ["github-releases"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
      "addLabels": ["automerge"]
    }
  ],

  "regexManagers": [
    {
      "descrption": "toml regex matcher: 'Version := \"<currentValue>\" }}   # renovate: datasource=<datasource> depName=<depname>'",
      "fileMatch": ["\\.tmpl$"],
      "matchStrings": [
        "([vV]ersion)\\s*:=\\s*\"(?<currentValue>.*?)\"\\s*}}\\s* #\\s*renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ]
}

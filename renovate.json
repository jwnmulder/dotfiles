{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>jwnmulder/renovate-config"
  ],
  "assignees": [
    "jwnmulder"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchFileNames": [
        ".pre-commit-config.yaml"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "addLabels": [
        "automerge"
      ]
    },
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "addLabels": [
        "automerge"
      ]
    },
    {
      "matchPackageNames": [
        "astral-sh/uv",
        "jdx/mise",
        "trufflesecurity/trufflehog"
      ],
      "extends": [
        "schedule:monthly"
      ]
    }
  ],
  "customManagers": [
    {
      "description": "yaml regex matcher: ': \"<currentValue>\" }}   # renovate: datasource=<datasource> depName=<depname>'",
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.yaml$/"
      ],
      "matchStrings": [
        ": \\s*\"*(?<currentValue>.*?)\"*\\s* #\\s*renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ]
}

# {{ if and (.is_desktop) (eq .chezmoi.os "linux") }}
".local/bin/bw":
  type: "file"
  url: "https://vault.bitwarden.com/download/?app=cli&platform=linux"
  executable: true
  refreshPeriod: "168h"
  filter:
    command: "zcat"

".local/bin/kustomize":
  url: "https://github.com/kubernetes-sigs/kustomize/releases/download/kustomize/{{ $kustomizeVersion }}/kustomize_{{ $kustomizeVersion }}_linux_{{ .chezmoi.arch }}.tar.gz"
  {{ template "external/executable_tar_file.yaml.tmpl" (list "kustomize") }}

".local/bin/helm":
  url: "https://get.helm.sh/helm-{{ $helmVersion }}-linux-{{ .chezmoi.arch }}.tar.gz"
  {{ template "external/executable_tar_file.yaml.tmpl" (list (printf "linux-%s/helm" .chezmoi.arch)) }}

".local/bin/backstage":
  url: "https://github.com/einride/backstage-go/releases/download/{{ $backstageGoVersion}}/backstage-go_{{ $backstageGoVersion | trimPrefix "v" }}_linux_{{ .chezmoi.arch }}.tar.gz"
  {{ template "external/executable_tar_file.yaml.tmpl" (list "backstage") }}

".local/bin/age":
  url: "https://github.com/FiloSottile/age/releases/download/{{ $ageVersion }}/age-{{ $ageVersion }}-{{ .chezmoi.os }}-{{ .chezmoi.arch }}.tar.gz"
  {{ template "external/executable_tar_file.yaml.tmpl" (list "age/age") }}

".local/bin/age-keygen":
  url: "https://github.com/FiloSottile/age/releases/download/{{ $ageVersion }}/age-{{ $ageVersion }}-{{ .chezmoi.os }}-{{ .chezmoi.arch }}.tar.gz"
  {{ template "external/executable_tar_file.yaml.tmpl" (list "age/age-keygen") }}

".local/bin/direnv":
  type: "file"
  url: "https://github.com/direnv/direnv/releases/download/{{ $direnvVersion }}/direnv.linux-{{ .chezmoi.arch }}"
  executable: true

".local/share/nvm/":
  type: "archive"
  url: "https://github.com/nvm-sh/nvm/archive/master.tar.gz"
  stripComponents: 1
  refreshPeriod: "168h"
# {{ end }}

# {{ if eq .chezmoi.os "linux" }}
".local/bin/fzf":
  url: https://github.com/junegunn/fzf/releases/download/{{ $fzfVersion }}/fzf-{{ $fzfVersion }}-linux_{{
      eq .chezmoi.arch "arm" | ternary (.uname.machine | trimSuffix "tel") .chezmoi.arch
    }}.tar.gz
  {{ template "external/executable_tar_file.yaml.tmpl" (list "fzf") }}

".config/fzf/":
  type: "archive"
  url: "https://github.com/junegunn/fzf/archive/refs/tags/{{ $fzfVersion }}.tar.gz"
  exact: true
  stripComponents: 2
  include: ["fzf-{{ $fzfVersion }}/shell/**"]

# {{ if eq .chezmoi.arch "amd64" }}
".local/bin/fd":
  url: "https://github.com/sharkdp/fd/releases/download/{{ $fdVersion }}/fd-{{ $fdVersion }}-{{ .uname.machine }}-unknown-linux-gnu.tar.gz"
  {{ template "external/executable_tar_file.yaml.tmpl" (list "--strip-components=1" "--wildcards" "*/fd") }}

".local/bin/trivy":
  url: https://github.com/aquasecurity/trivy/releases/download/{{ $trivyVersion }}/trivy_{{ $trivyVersion | trimPrefix "v" }}_Linux-64bit.tar.gz
  {{ template "external/executable_tar_file.yaml.tmpl" (list "trivy") }}
# {{ end }}

".local/share/oh-my-zsh/":
  type: "archive"
  url: "https://github.com/ohmyzsh/ohmyzsh/archive/master.tar.gz"
  exact: true
  stripComponents: 1
  refreshPeriod: "168h"

".local/share/oh-my-zsh/custom/themes/powerlevel10k/":
  type: "archive"
  url: "https://github.com/romkatv/powerlevel10k/archive/master.tar.gz"
  exact: true
  stripComponents: 1
  refreshPeriod: "168h"

".local/share/oh-my-zsh/custom/plugins/zsh-autosuggestions/":
  type: "archive"
  url: "https://github.com/zsh-users/zsh-autosuggestions/archive/master.tar.gz"
  exact: true
  stripComponents: 1
  refreshPeriod: "168h"

".local/share/oh-my-zsh/custom/plugins/zsh-nvm/":
  type: "archive"
  url: "https://github.com/lukechilds/zsh-nvm/archive/master.tar.gz"
  exact: true
  stripComponents: 1
  refreshPeriod: "168h"

".local/share/oh-my-zsh/custom/plugins/fast-syntax-highlighting/":
  type: "archive"
  url: "https://github.com/zdharma-continuum/fast-syntax-highlighting/archive/master.tar.gz"
  exact: true
  stripComponents: 1
  refreshPeriod: "168h"

# {{ end }}

# {{ if eq .chezmoi.os "windows" }}
"AppData/Local/starship":
  type: "archive"
  url: "https://github.com/starship/starship/releases/download/{{ $starshipVersion }}/starship-x86_64-pc-windows-msvc.zip"


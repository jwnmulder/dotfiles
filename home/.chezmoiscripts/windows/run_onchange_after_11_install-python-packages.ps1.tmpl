Set-StrictMode -Version 3.0
$ErrorActionPreference = "Stop"

{{ if and (.is_desktop) (lookPath "py.exe") -}}

{{ $python_tools := concat
  (dig "all" list .python_tools)
  (dig .profile list .python_tools) -}}

Write-Host "Installing/updating python tools: {{ $python_tools | join " " }}"

$UV_BIN = (Get-Command uv.exe -ErrorAction SilentlyContinue).Source
if (-not $UV_BIN) {
    $UV_BIN = "$env:USERPROFILE\.local\bin\uv.exe"
}

{{ range $python_tools -}}
  Write-Host Installing python tool '{{ . }}'
  Invoke-Expression "& '$UV_BIN' tool install {{ . }} --force"
{{ end }}

{{ end -}}

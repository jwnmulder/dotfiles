{{- if and (lookPath "python3") (.is_desktop) -}}
#!/usr/bin/env bash

set -euo pipefail

{{ $python_tools := concat
  (dig "all" list .python_tools)
  (dig .profile list .python_tools) -}}

echo "Installing/updating python tools: {{ $python_tools | join " " }}"
{{ range $python_tools -}}
  echo Installing python tool '{{ . }}'
  .local/bin/uv tool install {{ . }}
{{ end }}

{{ end -}}

{{- if .is_desktop -}}
#!/usr/bin/env bash

set -euo pipefail

{{ $pipx_packages := concat
  (dig "all" list .pipx_packages)
  (dig .profile list .pipx_packages) -}}

# Install pipx
{{ if not (stat (joinPath .chezmoi.homeDir ".local/bin/pipx")) }}
  echo "Installing pipx"
  curl -Ls https://github.com/pypa/pipx/releases/download/{{ .versions.pipx }}/pipx.pyz -o pipx.pyz && python3 pipx.pyz install pipx
{{ end }}

echo "Installing/updating pipx packages: {{ $pipx_packages | join " " }}"
{{ range $pipx_packages -}}

{{ if (lookPath "pip") -}}
  # Removing pip installed package as this is not preferred inymore in PEP668
  if python3 -m pip list | grep {{.}}; then
    echo "Removing pip installed package '{{ . }}'"
    python3 -m pip uninstall --isolated {{ . }} --yes
  fi
{{- end }}

  echo Installing pipx package '{{ . }}'
  .local/bin/pipx install {{ . }} --force
{{ end }}

{{ end -}}
